.chat
  .chat--header
    .header-left
      .chat-group-name
        = @group.name
      .chat-group-member
        %p
          Memberï¼š
        %ul.member-lists
          - @group.users.each do |user|
            %li.member-list<
              = user.name
    .header-right
      =link_to edit_group_path(@group), class: "edit__btn" do
        Edit
  %hr.chat--border
  .chat--messages
    - @messages.each do |message|
      .message
        .message--title
          %span.message--title__post-user<>
            = message.user.name
          %span.message--title__post-date<>
            = message.created_at
        .message--text
          - if message.body
            = message.body
          - if message.image
            = image_tag message.image
  .chat--footer
    = form_for [@group, @message], html: { class:"form" } do |f|
      = f.text_field :body, class: "form--text-input", placeholder: "type a message"
      %label.form--file-select-icon<>
        %span<>
          = fa_icon 'image'
        = f.file_field :image, class: "form--file-select-icon__display"
      = f.submit "Send", class: "form--send-button"